{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build External Dependencies (Debug)",
            "type": "shell",
            "command": "./scripts/build_crossguid.sh && ./scripts/build_opengex.sh && ./scripts/build_zlib.sh && ./scripts/build_bullet.sh && ./scripts/build_glslangValidator.sh && ./scripts/build_spirvcross.sh",
            "windows": {
                "command": "scripts\\build_crossguid.bat; scripts\\build_opengex.bat; scripts\\build_zlib.bat; scripts\\build_bullet.bat; scripts\\build_glslangValidator.bat; scripts\\build_spirvcross.bat"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": "build"
        },
        {
            "label": "Build External Dependencies (Release)",
            "type": "shell",
            "command": "./scripts/build_crossguid.sh Release && ./scripts/build_opengex.sh Release && ./scripts/build_zlib.sh Release && ./scripts/build_bullet.sh Release && ./scripts/build_glslangValidator.sh Release && ./scripts/build_spirvcross.sh Release ",
            "windows": {
                "command": "scripts\\build_crossguid.bat Release; scripts\\build_opengex.bat Release; scripts\\build_zlib.bat Release; scripts\\build_bullet.bat Release; scripts\\build_glslangValidator.bat Release; scripts\\build_spirvcross.bat Release"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": "build"
        },
        {
            "label": "Build Engine (Debug)",
            "type": "shell",
            "command": "./scripts/build-ninja.sh Debug",
            "windows": {
                "command": "scripts\\build-ninja.bat Debug",
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build Engine (Release)",
            "type": "shell",
            "command": "./scripts/build-ninja.sh Release",
            "windows": {
                "command": "scripts\\build-ninja.bat Release",
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}